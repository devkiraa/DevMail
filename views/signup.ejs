<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.1/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="max-w-md mx-auto mt-10">
    <div class="bg-white p-8 rounded shadow-md">
      <h2 class="text-2xl font-bold mb-6 text-center">Sign Up</h2>

      <!-- Regular Signup Form -->
      <form action="/signup" method="POST">
        <div class="mb-4">
          <label class="block text-gray-700">Name</label>
          <input type="text" name="name" required class="w-full px-3 py-2 border border-gray-300 rounded">
        </div>
        <div class="mb-4">
          <label class="block text-gray-700">Email</label>
          <input type="email" name="email" required class="w-full px-3 py-2 border border-gray-300 rounded">
        </div>
        <div class="mb-4">
          <label class="block text-gray-700">Password</label>
          <input type="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded">
        </div>
        <div class="text-center">
          <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Sign Up</button>
        </div>
      </form>

      <div class="text-center my-4">
        <p class="text-gray-500">or</p>
      </div>

      <!-- Google Signup -->
      <a href="/auth/google" class="w-full text-center bg-red-500 text-white py-2 rounded hover:bg-red-600 transition">Sign Up with Google</a>

      <div class="text-center text-gray-500 mt-4">
        Already have an account? <a href="/" class="text-blue-500 hover:underline">Login</a>
      </div>
    </div>
  </div>
</body>
</html>
